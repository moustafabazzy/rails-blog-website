<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h1> New Article </h1>
      <% if @article.errors.any? %>
        <h2> Could not create article </h2>
        <% @article.errors.full_messages.each do |error| %>
          <ul>
            <li><%= error %></li>
          </ul>
        <% end %>
      <% end %>

      <div class="mt-4">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
